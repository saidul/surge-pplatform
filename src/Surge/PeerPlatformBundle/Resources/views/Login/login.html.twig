{% extends "SurgePeerPlatformBundle::layout.html.twig" %}
{%set pageClass = 'SignIn' %}
{% set pageTitle='signin'%}
{% block content %}

<form action="{{ path("_login_check") }}" method="post">
{% if(_redir is defined) %}<input type="hidden" name="_redir" value="{{_redir}}" />{% endif %}
<h2>Login</h2>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    {% if error %}
    <div style="color:red; text-align: center">{{ error }}</div>
    {% endif %}

        <label for="username">Username</label>
        <input type="text" id="username" name="_username">

        <label for="password">Password</label>
        <input type="password" id="password" name="_password">

       <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked="checked" />
       <label for="remember_me">Remember</label>


        <input type="submit" value="submit" id="save">

</form>

{% endblock%}
